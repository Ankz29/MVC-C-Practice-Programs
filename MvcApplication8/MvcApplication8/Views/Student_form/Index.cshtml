@model MvcApplication8.Models.Student_form

@{
    ViewBag.Title = "Student's Form";
}

<html>
<body>

    <h2>Student's Form</h2>

    @using (Html.BeginForm("Index", "Student_form", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table>
            <tr>
                <td>
                    <b> Name:</b>
                </td>
                <td>@Html.TextBoxFor(m => m.Name) </td>
                <td> @Html.ValidationMessageFor(m=>m.Name) </td>

            </tr>

            <tr>
                <td>
                    <b> Surname:</b>
                </td>
                <td>@Html.TextBoxFor(m => m.Surname) </td>
            </tr>

            <tr>
                <td>
                    <b> Gender:</b>
                </td>
                <td>@Html.TextBoxFor(m => m.Gender) </td>
            </tr>

            <tr>
                <td>
                    <b> Contact_no:</b>
                </td>
                <td>@Html.TextBoxFor(m => m.Contact_no) </td>
            </tr>

            <tr>
                <td>
                    <b> Email:</b>
                </td>
                <td>@Html.TextBoxFor(m => m.Email) </td>
            </tr>

            <tr>
                <td>
                    <b> Percentage:</b>
                </td>
                <td>@Html.TextBoxFor(m => m.Percentage) </td>
            </tr>

            <tr>
                <td> <b> Attach_File: </b></td>
                <td>@Html.TextBox("file", "", new { type = "file" })</td>
                @ViewBag.Message
            </tr>

            <tr>
                <td> <input type="submit" value="submit" /></td>
            </tr>
        </table>

        @TempData["SuccessMessage"]
    }
</body>
</html>







