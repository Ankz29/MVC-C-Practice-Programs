    @using (Html.BeginForm("Index", "People", FormMethod.Post))
    {
        <table>
            <tr>
                <td><div class="editor-label">
             @Html.LabelFor(model => model.Name)
            </div></td>
           <td> <div class="editor-field">
                 @Html.EditorFor(model => model.Name)
