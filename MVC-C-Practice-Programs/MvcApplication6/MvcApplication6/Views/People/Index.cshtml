                <td> @Html.RadioButtonFor(m => m.Physically_abled, "yes")</td> 
            </tr> 
                <tr>
                    <td> Person Contact: </td>
                    <td> @Html.TextBoxFor(m => m.Contact) </td>
                </tr>
                <tr>
                    <td><center><input type="submit" value="submit" /></center> </td>
                </tr>
           
        </table>
    }

</body>
</html>
